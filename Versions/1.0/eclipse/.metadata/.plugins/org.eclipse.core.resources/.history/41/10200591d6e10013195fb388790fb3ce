package org.abimon.mods.minecraft.deco;

import cpw.mods.fml.common.registry.GameData;
import net.minecraft.init.Blocks;
import net.minecraft.item.ItemBlock;
import net.minecraft.item.ItemStack;
import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.network.NetworkManager;
import net.minecraft.network.Packet;
import net.minecraft.network.play.server.S35PacketUpdateTileEntity;
import net.minecraft.tileentity.TileEntity;

public class DecoTileEntity extends TileEntity 
{
	int blockType = 0;
	ItemStack using;
	boolean isBlock = true;
	
	public void readFromNBT(NBTTagCompound nbt)
    {
		super.readFromNBT(nbt);
		isBlock = nbt.getBoolean("IsBlock");
        ItemStack itemstack = null;
        if(isBlock)
        	itemstack = new ItemStack(GameData.getBlockRegistry().getObject(nbt.getString("Itemstack")));
        else
        	itemstack = new ItemStack(GameData.getItemRegistry().getObject(nbt.getString("ItemStack")));
        nbt.setString("Itemstack", itemstack);
    }

    public void writeToNBT(NBTTagCompound nbt)
    {
        super.writeToNBT(nbt);
        String itemstack = "";
        if(isBlock)
        	GameData.getBlockRegistry().getNameForObject(((ItemBlock) using.getItem()).field_150939_a);
        else
        	GameData.getItemRegistry().getNameForObject(using.getItem());
        nbt.setString("Itemstack", itemstack);
        nbt.setBoolean("IsBlock", isBlock);
    }
    
    public Packet getDescriptionPacket()
    {
        NBTTagCompound nbttagcompound = new NBTTagCompound();
        this.writeToNBT(nbttagcompound);
        return new S35PacketUpdateTileEntity(this.xCoord, this.yCoord, this.zCoord, 17, nbttagcompound);
    }
    
    /**
     * Called when you receive a TileEntityData packet for the location this
     * TileEntity is currently in. On the client, the NetworkManager will always
     * be the remote server. On the server, it will be whomever is responsible for
     * sending the packet.
     *
     * @param net The NetworkManager the packet originated from
     * @param pkt The data packet
     */
    public void onDataPacket(NetworkManager net, S35PacketUpdateTileEntity pkt)
    {
    	readFromNBT(pkt.func_148857_g());
    }
    
}
