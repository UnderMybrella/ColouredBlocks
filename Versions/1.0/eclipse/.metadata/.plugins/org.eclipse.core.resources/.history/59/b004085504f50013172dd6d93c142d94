package org.abimon.mods.minecraft.dnc.mapGen;

import java.util.Random;

import net.minecraft.init.Blocks;
import net.minecraft.world.World;
import net.minecraft.world.chunk.IChunkProvider;
import cpw.mods.fml.common.IWorldGenerator;

public class DnCWorldGenerator implements IWorldGenerator{

	@Override
	public void generate(Random random, int chunkX, int chunkZ, World world,
			IChunkProvider chunkGenerator, IChunkProvider chunkProvider) {
		chunkX *= 16;
		chunkZ *= 16;
		if(world.provider.dimensionId == 0)
		{
			int x = chunkX + random.nextInt(16);
			int y = random.nextInt(64);
			int z = chunkZ + random.nextInt(16);
			
			boolean shouldSpawn = random.nextInt() % 17 == 4;
			if(!shouldSpawn)
				return;
			for(int modX = -10; modX < 11; modX++)
				for(int modY = -20; modY < 21; modY++)
					for(int modZ = -10; modZ < 11; modZ++)
			System.out.println(x + ", " + y + ", " + z + ", " + chunkX + ", " + chunkZ);
			
		}
	}

}
