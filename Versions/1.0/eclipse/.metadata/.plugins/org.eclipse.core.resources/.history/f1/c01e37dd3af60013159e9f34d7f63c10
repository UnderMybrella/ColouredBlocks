package org.abimon.mods.minecraft.colouredBlocks;

import net.minecraft.item.ItemStack;
import net.minecraft.world.World;

public interface IColourable 
{
	/** When this block is clicked on by a colouring item
	 * @param itemstack
	 * @param world
	 * @param x
	 * @param y
	 * @param z
	 * @param face
	 * @param posX
	 * @param posY
	 * @param posZ
	 */
	public void onBlockColoured(ItemStack itemstack, World world, int x, int y, int z, int face, float posX, float posY, float posZ);
}
