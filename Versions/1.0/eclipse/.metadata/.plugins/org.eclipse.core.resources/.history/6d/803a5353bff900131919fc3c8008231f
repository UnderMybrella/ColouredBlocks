package org.abimon.mods.minecraft.colouredBlocks;

import net.minecraft.block.Block;
import net.minecraft.block.BlockAnvil;
import net.minecraft.block.BlockBeacon;
import net.minecraft.block.BlockBrewingStand;
import net.minecraft.block.BlockCauldron;
import net.minecraft.block.BlockCocoa;
import net.minecraft.block.BlockDoublePlant;
import net.minecraft.block.BlockDragonEgg;
import net.minecraft.block.BlockEndPortalFrame;
import net.minecraft.block.BlockFence;
import net.minecraft.block.BlockFenceGate;
import net.minecraft.block.BlockFire;
import net.minecraft.block.BlockFlowerPot;
import net.minecraft.block.BlockHopper;
import net.minecraft.block.BlockPane;
import net.minecraft.block.BlockRailBase;
import net.minecraft.block.BlockRedstoneComparator;
import net.minecraft.block.BlockRedstoneDiode;
import net.minecraft.block.BlockRedstoneRepeater;
import net.minecraft.block.BlockStairs;
import net.minecraft.block.BlockWall;
import net.minecraft.client.renderer.RenderBlocks;
import net.minecraft.world.IBlockAccess;
import cpw.mods.fml.client.registry.ISimpleBlockRenderingHandler;

public class ColouredRenderer implements ISimpleBlockRenderingHandler {

	@Override
	public void renderInventoryBlock(Block block, int metadata, int modelId,
			RenderBlocks renderer) 
	{}

	@Override
	public boolean renderWorldBlock(IBlockAccess world, int x, int y, int z,
			Block block, int modelId, RenderBlocks renderer) {
		if(getRenderId() != modelId)
			return false;
		else
		{
			if(!(world.getTileEntity(x, y, z) instanceof TileEntityColoured))
				return false;
			int renderID = ((TileEntityColoured) world.getTileEntity(x, y, z)).block.getRenderType();
			boolean shouldRenderAsSpecial = shouldRenderAsSpecial(renderID);
			if(shouldRenderAsSpecial)
				renderBlock(renderer, block, x, y, z, renderID);
			else
				renderer.renderStandardBlock(block, x, y, z);
			return true;
		}
	}

	private void renderBlock(RenderBlocks renderer, Block block, int x, int y,
			int z, int renderID) {
		switch(renderID){
		case 0 : return this.renderStandardBlock(block, x, y, z) ;
		case 4: return this.renderBlockLiquid(block, x, y, z) ;
		case 31: return this.renderBlockLog(block, x, y, z) ;
		case 1: return this.renderCrossedSquares(block, x, y, z) ;
		case 40: return this.renderBlockDoublePlant((BlockDoublePlant)block, x, y, z) ;
		case 2: return this.renderBlockTorch(block, x, y, z) ;
		case 20: return this.renderBlockVine(block, x, y, z) ;
		case 11: return this.renderBlockFence((BlockFence)block, x, y, z) ;
		case 39: return this.renderBlockQuartz(block, x, y, z) ;
		case 5: return this.renderBlockRedstoneWire(block, x, y, z) ;
		case 13: return this.renderBlockCactus(block, x, y, z) ;
		case 9: return this.renderBlockMinecartTrack((BlockRailBase)block, x, y, z) ;
		case 19: return this.renderBlockStem(block, x, y, z) ;
		case 23: return this.renderBlockLilyPad(block, x, y, z) ;
		case 6: return this.renderBlockCrops(block, x, y, z) ;
		case 3: return this.renderBlockFire((BlockFire)block, x, y, z) ;
		case 8: return this.renderBlockLadder(block, x, y, z) ;
		case 7: return this.renderBlockDoor(block, x, y, z) ;
		case 10: return this.renderBlockStairs((BlockStairs)block, x, y, z) ;
		case 27: return this.renderBlockDragonEgg((BlockDragonEgg)block, x, y, z) ;
		case 32: return this.renderBlockWall((BlockWall)block, x, y, z) ;
		case 12: return this.renderBlockLever(block, x, y, z) ;
		case 29: return this.renderBlockTripWireSource(block, x, y, z) ;
		case 30: return this.renderBlockTripWire(block, x, y, z) ;
		case 14: return this.renderBlockBed(block, x, y, z) ;
		case 15: return this.renderBlockRepeater((BlockRedstoneRepeater)block, x, y, z) ;
		case 36: return this.renderBlockRedstoneDiode((BlockRedstoneDiode)block, x, y, z) ;
		case 37: return this.renderBlockRedstoneComparator((BlockRedstoneComparator)block, x, y, z) ;
		case 16: return this.renderPistonBase(block, x, y, z, false) ;
		case 17: return this.renderPistonExtension(block, x, y, z, true) ;
		case 18: return this.renderBlockPane((BlockPane)block, x, y, z) ;
		case 41: return this.renderBlockStainedGlassPane(block, x, y, z) ;
		case 21: return this.renderBlockFenceGate((BlockFenceGate)block, x, y, z) ;
		case 24: return this.renderBlockCauldron((BlockCauldron)block, x, y, z) ;
		case 33: return this.renderBlockFlowerpot((BlockFlowerPot)block, x, y, z) ;
		case 35: return this.renderBlockAnvil((BlockAnvil)block, x, y, z) ;
		case 25: return this.renderBlockBrewingStand((BlockBrewingStand)block, x, y, z) ;
		case 26: return this.renderBlockEndPortalFrame((BlockEndPortalFrame)block, x, y, z) ;
		case 28: return this.renderBlockCocoa((BlockCocoa)block, x, y, z) ;
		case 34: return this.renderBlockBeacon((BlockBeacon)block, x, y, z) ;
		case 38: return this.renderBlockHopper((BlockHopper)block, x, y, z);
		}

		public boolean shouldRenderAsSpecial(int renderID) 
		{
			switch(renderID)
			{
			case 40:
				return false;
			case 11:
				return false;
			case 9:
				return false;
			case 3:
				return false;
			case 10:
				return false;
			case 27:
				return false;
			case 32:
				return false;
			case 15:
				return false;
			case 36:
				return false;
			case 37:
				return false;
			case 18:
				return false;
			case 21:
				return false;
			case 24:
				return false;
			case 35:
				return false;
			case 33:
				return false;
			case 25:
				return false;
			case 26:
				return false;
			case 28:
				return false;
			case 34:
				return false;
			case 38:
				return false;
			}
			return true;
		}

		@Override
		public boolean shouldRender3DInInventory(int modelId) {
			return false;
		}

		@Override
		public int getRenderId() {
			return ColouredBlocks.RENDER;
		}

	}
