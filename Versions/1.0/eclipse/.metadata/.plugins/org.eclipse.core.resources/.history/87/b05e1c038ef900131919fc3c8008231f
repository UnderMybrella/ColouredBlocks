package org.abimon.mods.minecraft.colouredBlocks;

import net.minecraft.block.Block;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.init.Blocks;
import net.minecraft.item.ItemBlock;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;

public class ItemColouredPlacer extends ItemBlock 
{

	public ItemColouredPlacer() 
	{
		super();
	}

	public boolean onItemUse(ItemStack par1ItemStack, EntityPlayer par2EntityPlayer, World par3World, int par4, int par5, int par6, int par7, float par8, float par9, float par10)
	{
		boolean bool = super.onItemUse(par1ItemStack, par2EntityPlayer, par3World, par4, par5, par6, par7, par8, par9, par10);
		if(!bool)
			return false;
		par3World.setBlock(par4, par5, par6, Blocks.anvil);
		return true;
	}

}
